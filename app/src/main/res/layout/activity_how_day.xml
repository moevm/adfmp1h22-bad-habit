<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowDay">

    <TextView
        android:id="@+id/date2"
        android:layout_width="130dp"
        android:layout_height="26dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="216dp"
        android:text="Какая то дата"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/feelSeek"
        style="@android:style/Widget.Material.SeekBar.Discrete"
        android:max="10"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="332dp"
        android:layout_marginEnd="134dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="n" />

    <TextView
        android:id="@+id/yourMood2"
        android:layout_width="303dp"
        android:layout_height="19dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="52dp"
        android:text="Каково было ваше самочувствие?"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yourMood"
        android:layout_width="303dp"
        android:layout_height="19dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="52dp"
        android:text="Каково было ваше настроение?"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/yesButton"
        android:backgroundTint="@android:color/holo_red_dark"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="onYesButtonClick"
        android:text="Да"
        android:textSize="8sp"
        app:iconPadding="0dp"
        app:layout_constraintStart_toEndOf="@+id/noButton"
        app:layout_constraintTop_toBottomOf="@+id/habitName"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/habitName"
        android:layout_width="137dp"
        android:layout_height="20dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="88dp"
        android:text="Был ли срыв?"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/noButton"
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:onClick="onNoButtonClick"
        android:text="Нет"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habitName"
        tools:ignore="TouchTargetSizeCheck" />

    <SeekBar
        android:id="@+id/moodSeek"
        style="@android:style/Widget.Material.SeekBar.Discrete"
        android:max="10"
        android:layout_width="145dp"
        android:layout_height="22dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="134dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="n" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="368dp"
        android:layout_marginEnd="145dp"
        android:text="Сохранить"
        android:onClick="onSaveButtonClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="179dp"
        android:layout_height="41dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="164dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textViewMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourMood" />

    <TextView
        android:id="@+id/textViewFeel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourMood2" />

</androidx.constraintlayout.widget.ConstraintLayout>